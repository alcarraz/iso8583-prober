<logger name="Q2">
  <log-listener class="org.jpos.util.RealmLogFilter" enabled="${!probe.verbose}">
    <property name="dump-interval" value="60000"/>
    <disabled>${probe.log.disable-realms:Q2.system}</disabled>
  </log-listener>
  <log-listener class="org.jpos.util.FilterLogListener" enabled="${!probe.verbose}">
    <property name="priority" value="info"/>
  </log-listener>
  <log-listener class="org.jpos.util.SimpleLogListener" enabled="${probe.verbose}" />
</logger>
